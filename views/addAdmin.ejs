<%- include("./partials/header") -%>
<!-- Right sidebar Ends-->

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>Categories
                            <small>Harves Stores</small>
                        </h3>

                    </div>

                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/shop"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Physical</li>
                        <li class="breadcrumb-item active">Categories List</li>
                    </ol>

                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row products-admin ratio_asos">

            <form action="/shop/createadmin" method="post">
                <div class="form-group">
                    <h3 style="color: red;"><%=msg%></h3>
                </div>
                <div class="form-group">
                    <label class="mb-1">Phone Number
                        :</label>
                    <input class="form-control" name="phone" placeholder="Enter phone number" type="text" required>
                </div>
                <div class="form-group">
                    <label class="mb-1">Name
                        :</label>
                    <input class="form-control" name="name" placeholder="Enter name" type="text" required>
                </div>
                <button class="btn btn-primary" type="submit">Save</button>
            </form>
            <%if(data.length){%>


            <div class="container-fluid" style="margin-top: 15px;;">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        <%var i=1;for(var cat of data){%>

                        <tr>
                            <th scope="row"><%=i%></th>
                            <td><%=cat.name%></td>
                            <td><%=cat.phone%></td>
                            <td><a href="/shop/deleteadmin/<%=cat._id%>"><i class="fa fa-trash text-red"></i></a></td>

                        </tr>
                        <%i++}%>
                    </tbody>
                </table>



            </div>
            <%}%>
        </div>
