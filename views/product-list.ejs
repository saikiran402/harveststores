<%- include("./partials/header") -%>
<!-- Right sidebar Ends-->

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>Categories
                            <small>Harves Stores</small>
                        </h3>

                    </div>

                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/shop"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Physical</li>
                        <li class="breadcrumb-item active">Categories List</li>
                    </ol>
                    <div>
                        <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal">Add
                            Categories</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row products-admin ratio_asos">
            <%if(categories.length){%>
            <%for(var cat of categories){%>
            <div class="col-xl-3 col-sm-6">
                <div class="card">
                    <div class="card-body product-box">
                        <div class="img-wrapper">
                            <div class="front">
                                <form action="/shop/updateorder" method="POST">
                                    <input type="text"  name="orderId" value="<%=cat.order%>" style="border: none;">
                                    <input type="text"  name="image" value="<%=cat.image%>" style="border: none;">
                                    <input type="hidden" name="catId" value="<%=cat._id%>">
                                    <input type="submit" value="save">
                                </form>
                             
                                <a href="/shop/getproduct?cat=<%=cat._id%>">
                                    <center><img src="<%=cat.image%>" height="150px;"></center>
                                    <!-- <h3><%=cat.image%></h3> -->
                                </a>

                            </div>
                        </div>
                        <div><br>
                            <a href="/shop/getproduct?cat=<%=cat._id%>"> <h6><b>Category</b>: <%=cat.category%></h6>
                            <h6><b>Category Description</b>: <%=cat.category_description%></h6></a>
                        </div>
                        <div>
                            <a href="/shop/deletecategory/<%=cat._id%>">
                            <button>Delete</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
            <%}%>

            <!-- <div class="col-xl-3 col-sm-6">
                <div class="card">
                    <div class="card-body product-box">
                        <div class="img-wrapper">
                            <div class="front">

                                <button type="button" class="btn btn-info btn-lg" data-toggle="modal"
                                    data-target="#myModal">Add Categories</button>

                            </div>
                        </div>

                    </div>
                </div>
            </div> -->

        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-body">
                <p>Add categories.</p>
                <form action="/shop/addcategories" method="post">
                    <input class="form-control" type="text" name="category" placeholder="Category name" required>
                    <input class="form-control" type="text" name="category_description"
                        placeholder="Category Description" required>
                    <input class="form-control" type="text" name="image" placeholder="Image url">
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Submit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>
<!-- footer start-->
<footer class="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 footer-copyright">
                <p class="mb-0">Copyright 2019 © Harvest Stores All rights reserved.</p>
            </div>
            <div class="col-md-6">
                <p class="pull-right mb-0">Hand crafted & made with<i class="fa fa-heart"> MindWorkers</i></p>
            </div>
        </div>
    </div>
</footer>
<!-- footer end-->

</div>

</div>

