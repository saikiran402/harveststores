                                    <th scope="col">Product Description</th>
                                    <th scope="col">Unit</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                <%var i=1;for(var item of categories){%>
                                <form action="/shop/updateproduct" method="POST">
                                    <input type="hidden" name="category" value="<%=item.category%>">
                                    <input type="hidden" name="id" value="<%=item._id%>">
                                    <tr>
                                        <th scope="row"><%=i%></th>
                                        <td><img style="border-radius: 100%;width: 50px;" src="<%=item.image%>"> </td>

                                        <td><input type="text" style="border: 0;" name="product_name"
                                                value="<%=item.product_name%>">
                                        </td>
                                        <td>
                                            <textarea name="product_description" style="border: 0; overflow: hidden;"
                                                class="form-control" value><%=item.product_description%></textarea>
                                            <!-- <input type="text" style="border: 0;" class=""
                                            value="<%=item.product_description%>"> -->
                                        </td>
                                        <td><%=item.unit%></td>
                                        <%if(item.inStock){%>
                                        <td>
                                            <label class="switch">
                                                <input class="xs" type="checkbox" value="<%=item._id%>"
                                                    onclick="slider(this.value)" checked>
                                                <span class="slider round"></span>
                                            </label>
                                        </td>
                                        <%}else{%>
                                        <td>
                                            <label class="switch">
                                                <input class="btn-xs" type="checkbox" value="<%=item._id%>"
                                                    onclick="slider(this.value)">
                                                <span class="slider round"></span>
                                            </label>
                                        </td>
                                        <%}%>
                                          
                                            <td><input type="text" style="border: 0; width: 35px;" name="product_price" value="<%=item.product_price%>">
                                        </td>
                                        <td><input type="submit" class="btn btn-xs btn-info">&nbsp;&nbsp;<a
                                                href='/shop/deleteproduct/<%=item._id%>/<%=item.category%>'><i
                                                    class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                </form>
                                <%i++}%>



                            </tbody>
                        </table>
                        <%}%>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
