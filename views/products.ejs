<script>

    function slider(params) {
        $.get(`/shop/update/${params}`);

    }
    function schedule(unit) {

        if (unit == "gram") {
            document.getElementById("pid").innerHTML = "500 grams"
        } else if (unit == "kilo") {
            document.getElementById("pid").innerHTML = "1 Kilo "
        } else if (unit == "liter") {
            document.getElementById("pid").innerHTML = "1 liter"
        } else {
            document.getElementById("pid").innerHTML = "1 dozen"
        }

    }
</script>
